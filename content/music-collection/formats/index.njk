---
eleventyNavigation:
  key: Formats
  parent: Music Collection
eleventyComputed:
  title: "{{ eleventyNavigation.key }} | {{ eleventyNavigation.parent }}"
permalink: "/music-collection/formats/index.html"
---
<header class="main-header">
  {% include "partials/breadcrumb.njk" %}
  <h1>{{ eleventyNavigation.key }}</h1>
</header>

<ul role="list" class="index__list">
  {% for format in collections.formats %}
  <li>
    <a href="/music-collection/formats/{{ format.format | slugify }}.html" class="index__item surface">
      <div class="index__details">
        <h2 class="title">{{ format.format }}</h2>
        <p class="meta"><span class="counter">{{ format.releases.length }}</span> releases</p>
        {% if release.favourite %}
          <div class="badge"><svg width="14" height="14" viewBox="0 0 24 24" class="icon-stroke" aria-hidden="true">
            <use xlink:href="#icon-heart"></use>
          </svg> Favourite</div>
          {% endif %}
      </div>
      <svg width="36" height="36" viewBox="-6 -6 36 36" class="index__action action icon-stroke" aria-hidden="true">
        <use xlink:href="#icon-chevron-right"></use>
      </svg>
    </a>
  </li>
  {% endfor %}
</ul>
