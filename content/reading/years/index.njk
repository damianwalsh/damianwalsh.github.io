---
eleventyNavigation:
  key: reading-years
  title: By Year Read
  parent: Reading
eleventyComputed:
  title: "{{ eleventyNavigation.title }} | {{ eleventyNavigation.parent }}"
permalink: "/reading/years/"
---
<header class="main-header">
  {% include "partials/breadcrumb.njk" %}
  <h1>{{ eleventyNavigation.title }}</h1>
</header>

<ul role="list" class="index__grid">
  {% for year in collections.years | reverse %}
  {% if year.year and year.books %}
  <li>
    <a href="/reading/years/{{ year.year }}" class="index__item index__item--vertical surface">
      <h2 class="title">{{ year.year }}</h2>
      <div class="preview__grid">
        {% for book in year.books | slice(0, 4) %}
        <img src="../img/{{ book.title | slugify }}-{{ book.author | slugify }}.jpg" alt="{{ book.title }}" loading="lazy"
          sizes="(min-width: 1720px) 129px, (min-width: 1460px) calc(9.17vw - 27px), (min-width: 1380px) calc(16.67vw - 90px), (min-width: 1180px) calc(11.11vw - 23px), (min-width: 880px) calc(15vw - 22px), (min-width: 580px) calc(22.86vw - 22px), calc(46.92vw - 23px)"
          class="preview__image preview__image--rect">
        {% endfor %}
      </div>
      <p class="meta"><span class="counter">{{ year.books.length }}</span> book{{ 's' if year.books.length !== 1 }}</p>

      <svg width="36" height="36" viewBox="-6 -6 36 36" class="index__action action icon-stroke" aria-hidden="true">
        <use xlink:href="#icon-chevron-right"></use>
      </svg>
    </a>
  </li>
  {% endif %}
  {% endfor %}
</ul>
