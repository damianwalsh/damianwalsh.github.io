---
layout: default
---
<header class="bg-slate-100 pt-6 pb-[3.25rem] md:pt-8 md:pb-16 dark:bg-slate-800">
  <div class="container flex gap-4">
    <div>
      {%- for post in collections.work -%}
      <p class="text-lg font-semibold md:text-xl lg:text-2xl">
        {{ post.data.brand }}
      </p>
      <h1 class="text-2xl font-bold text-slate-800 dark:text-slate-50 md:text-3xl lg:text-4xl">
        {{ post.data.title }}
      </h1>
      {%- endfor -%}
    </div>
  </div>
</header>
<div class="container">

  {{ content | safe}}
  
</div>

